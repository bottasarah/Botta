lista_citta = ["Napoli", "Roma", "Milano", "Bari, "Caserta"]
lista_citta.sort() #la metto in ordine alfabetico
lista_citta.sort(reverse=True) #le mette in ordine alfabetico al contrario
print(lista_citta) #mi mostra la lista

print(sorted(lista_citta) #faccio lo stesso, li sposto di posto
