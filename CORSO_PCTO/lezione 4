lista_citta = ["Napoli", "Roma", "Milano", "Bari, "Caserta"] #creo una lista nelle parentesi

print(lista_citta[0]) #mi dirà Napoli
print(lista_citta[-1]) #mi dirà Caserta
print(lista-citta[0:2]) #l'ultimo numero non viene contato
print(lista_citta[:]) #prende tutti i valori
print(lista_citta[2:]) #andrà da 2 fino alla fine, il 2 sarà compreso ovviamente
print(list_citta[2:100]) #prenderà tutte le città, non gli interessa il seconda numero, è diverso dalla condizione singola
